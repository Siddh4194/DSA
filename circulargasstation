//gas station optimized problem
class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
    int gSum=0,idx=0,cSum=0;
    for(int i=0;i<gas.length;i++){
        gSum+=gas[i];
        cSum+=cost[i];
    }
    if(gSum<cSum) return -1;
    cSum=0;
    for(int i=0;i<gas.length;i++){
        cSum+=gas[i]-cost[i];
        if(cSum<0){
            idx=i+1;
            cSum=0;
        }
    }
    return idx;
}}
